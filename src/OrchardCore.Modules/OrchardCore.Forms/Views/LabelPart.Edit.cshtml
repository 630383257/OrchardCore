@using OrchardCore.Forms.ViewModels;
@model LabelPartEditViewModel

<fieldset class="form-group">
    <label asp-for="Text">@T["Text"]</label>
    <input type="text" asp-for="Text" class="form-control"></input>
    <span class="hint">@T["The text for this label."]</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="For">@T["For"]</label>
    <input type="text" asp-for="For" class="form-control"></input>
    <span class="hint">@T["The ID of the form element to associate with this label."]</span>
</fieldset>